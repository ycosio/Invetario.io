<div class="container">

    <h3>Editar producto</h3><br>
    
  <%= form_for @producto, url: "/productos/#{@producto[:id]}" do |f| %>
     <div>
        <%= label_tag(:n, "Nombre:") %> <br>
        <%= f.hidden_field :id %>
        <%= f.text_field :nombre, placeholder:"Nombre" %>
    </div>
    <div>
      <%= label_tag(:m, "Marca:") %> <br>
    <%= f.select :id_marca,  options_from_collection_for_select(@marcas, 'id', 'nombre') %>
    </div>
     <div>
        <%= label_tag(:d, "Descripción:") %> <br>
        <%= f.text_area :descripcion, placeholder:"Descripción", cols: 22, rows: 3, style:"resize:none" %>
    </div>
     <div>
        <%= label_tag(:p, "Precio en pesos:") %> <br>
        <%= f.text_field :precio_pesos, placeholder:"Precio" %>
    </div>
    
    <% @producto.errors.full_messages.each do |message| %>
    <div class="text-danger">
        * <%= message %>
    </div>
  <% end %>

    <div style="padding-top: 1em">    
      <%= f.submit "Guardar", class:"btn btn-primary" %>
    </div>

  <% end %>

</div>

<script type="text/javascript">
  $(function(){
    $("#menu2").addClass("active");
  });
</script>